{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div class="contacttitle">
 <h2>Contactez-nous</h2>
 </div>
<div class="fullcontainer">
   <div class="contactForm" class="mt-5">
               {{ form_start(form) }}
                  <div class="size">
                     <div class="col">{{ form_row(form.firstname) }}</div>
                  </div>
                     <div class="size">
                     <div class="col">{{ form_row(form.email) }}</div>
                     <div class="col">{{ form_row(form.message) }}</div>
                     </div>
               {{ form_rest(form) }}
                     <div class="form-group">
                        <button class=" btn bg-warning text-white" >{{ button_label|default('Envoyer votre message') }}</button> 
                     </div>
               {{ form_end(form) }}
      </div>
</div>   
   {% endblock %}
