{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <div class="wilderPhoto"> <img  src="/pictures/{{ team.photo }}" alt=".." /></div>
    <div class="wilderName"><h1>Wilder: {{ team.name }}</h1></div>
     <div class="wilderDES"><h3> {{ team.description }}</h3></div>
       <h3 class="wilderName">participer à :</h3>
            {% for e in team.events  %}
       <h3 class="wilderName"> {{ e.title }}</h3>
     {% endfor %}

<div class="btns">
    <a class=" btn btn-warning btn-lg"  href="{{ path('team_index') }}">Retour à la liste</a>
  {% if is_granted('ROLE_ADMIN') %}
    <a class=" btn btn-success btn-lg"  href="{{ path('team_edit', {'id': team.id}) }}">Modifier</a>

    {{ include('team/_delete_form.html.twig') }}
    </div>
  {% endif %}
  
{% endblock %}
